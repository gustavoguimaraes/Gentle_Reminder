
<div class = "row">
  <div class= "col-md-5 col-md-offset-1">
      <h1 class ="heavy"> MY GOALS</h1>
      <h3><%= link_to "Create a goal now!", new_user_goal_path %></h3>
  </div>

  <div class= "col-md-6">
      <h1 class ="heavy">MY STATS</h1>
       <% @goals_array.each do |goal_hash| %>
    <ul>
        <li><h3>Goal Title: <%= goal_hash[:goal_key].name %></h3></li>
        
        <h3>Finish Date:</h3>
          <li><h3 class = "turnpike"><%= goal_hash[:date] %></h3></li>
        
        <h3>Repo Name:</h3>
          <li><h3 class = "turnpike"><%= goal_hash[:goal_key].repo%></h3> </li>
        
        <h3>Commits Towards Goal:</h3>
          <li><h3 class = "turnpike"> <%= @weekly_commits%></h3> </li>
    </ul>
  </br></br>
      <% end %>
   
  </div>

</div>


